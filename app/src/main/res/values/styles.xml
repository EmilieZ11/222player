<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- GLOBAL -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"><!--Theme.AppCompat.Light.DarkActionBar-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/statusBarColor</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/navigationBarColor</item>
    </style>

    <style name="Motor1">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="TBPopupTheme1" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/tb_popup_menu_bg_1_xml</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BMButton1">
        <item name="android:background">@drawable/square_1_darkblue_1_to_blue_1_xml</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


