    <style name="mLlItemContents">
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="mTvItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mTvItemDesc">
